<h1>Articles</h1>

<% @articles.each do |article| %>
  <p><%= article.title %> |
  <%= article.user.name %> |
  <%= link_to('Show', article_path(article)) %> |
  <%= link_to('Edit', edit_article_path(article)) %> |
  <%= link_to('Delete', article_path(article), method: :delete, data: {confirm: 'Are you sure?'}) %>
  </p>
<% end %>
