<h2><%= @article.title %></h2>
<h3> Written by: <%= @article.user.name %></h3>
<p><%= @article.content %></p>
<% if can? :modify, @article %>
<%= link_to('Edit', edit_article_path(@article)) %>
| <%= link_to('Delete', article_path(@article), method: :delete, data: {confirm: 'Are you sure?'}) %>
<% end %>